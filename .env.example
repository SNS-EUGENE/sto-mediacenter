# Supabase 설정
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# 앱 URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Google Gmail API (STO 자동 로그인용 - 선택사항)
# Google Cloud Console에서 OAuth 2.0 자격증명 생성 필요
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token

# Vercel Cron Secret (배포 시 - 선택사항)
# Vercel 배포 시 Cron 작업 인증용
CRON_SECRET=your-cron-secret

# Supabase Database Webhook Secret
# openssl rand -hex 32 로 생성
SUPABASE_WEBHOOK_SECRET=your-webhook-secret

# 이메일 알림 (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=studio@yourdomain.com
ADMIN_NOTIFICATION_EMAILS=admin@example.com

# 푸시 알림 (Web Push VAPID Keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# STO 자동 로그인 자격증명 (Cron용 - 선택사항)
STO_EMAIL=your-sto-email
STO_PASSWORD=your-sto-password

# Sentry 에러 모니터링
# https://sentry.io 에서 프로젝트 생성 후 DSN 복사
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@xxx.ingest.sentry.io/xxxxx
